<h1>Todos listing</h1>
<p>
<%= link_to 'Create Todo',new_todo_path%>
</p>

<table>
<tr>
    <th>Name</th>
    <th>description</th>
</tr>
<% @todos.each do |t| %>
    <tr>
        <td><%= t.name%></td>
        <td><%= t.description%></td>
        <td><%= link_to 'Edit', edit_todo_path(t)%></td>
        <td><%= link_to 'Show', todo_path(t)%></td>
    </tr>
<%end%>
</table>